@model ServiceReferenceStudent.student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;font-family:Poppins;color:darkkhaki;">Create a new student</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;">CNE:</label>
                <input asp-for="cne" class="form-control" />
                <span asp-validation-for="cne" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;"> First Name:</label>
                <input asp-for="firstname" class="form-control" />
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;">Last Name:</label>
                <input asp-for="lastname" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;">Level:</label>
                <input asp-for="level" class="form-control" />
                <span asp-validation-for="level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;">Email:</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" style="font-family:Poppins;color:darkolivegreen;">Phone Number:</label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" style="width:130px;font-family:Poppins;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-family:Poppins;color:brown;text-align:center;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
